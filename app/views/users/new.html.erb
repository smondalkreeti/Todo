<%= render(partial: "shared/error_messages", locals: { target: @user }) %>
<%= form_for(@user) do |f| %>
  </div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, placeholder: "Enter Name" %>
  </div>
  <div>
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, placeholder: "Enter Email" %>
  </div>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, placeholder: "Enter Password" %>
  </div>
  <div>
    <%= f.submit "Sign Up" %>
  </div>
<% end %>
